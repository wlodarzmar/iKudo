<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="https://cdn.auth0.com/js/lock/10.5/lock.min.js"></script>
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <title>@ViewBag.Title</title>
    <!--The FontAwesome version is locked at 4.6.3 in the package.json file to keep this from breaking.-->

    <environment exclude="Development">
        <link rel="stylesheet" href="~/styles/style.min.css" />
    </environment>
    <environment include="Development">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link rel="stylesheet" href="~/jspm_packages/github/twbs/bootstrap@3.3.7/css/bootstrap.min.css" />
        <link rel="stylesheet" href="styles/styles.css" />
        <link rel="stylesheet" href="~/jspm_packages/npm/font-awesome@4.6.3/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/jspm_packages/npm/izitoast@1.1.1/dist/css/iziToast.min.css" />
        <link rel="stylesheet" href="~/jspm_packages/npm/animate.css@3.5.2/animate.min.css" />
    </environment>

    @*@RenderSection("Styles", false)*@
</head>

<body class="light-blue">
    <section id="main">
        @RenderBody()
    </section>
</body>
</html>
